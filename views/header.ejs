<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Navbar</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        // Initialize Tailwind's dark mode toggle
        tailwind.config = {
            darkMode: 'class',
        };
    </script>
</head>
<body class="bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-gray-100">
    <!-- Navbar -->
    <nav class="bg-white dark:bg-gray-900 shadow-md">
        <div class="container mx-auto px-4 py-3 flex justify-between items-center">
            <!-- Logo -->
            <div class="text-xl font-bold">Brand</div>
            
            <!-- Menu Links -->
            <ul class="flex space-x-6">
                <li><a href="#" class="hover:text-blue-500 dark:hover:text-blue-400">Home</a></li>
                <li><a href="#" class="hover:text-blue-500 dark:hover:text-blue-400">About Us</a></li>
                <li><a href="#" class="hover:text-blue-500 dark:hover:text-blue-400">Services</a></li>
                <li><a href="#" class="hover:text-blue-500 dark:hover:text-blue-400">Contact Us</a></li>
            </ul>

            <!-- Dark Mode Toggle -->
            <button id="darkModeToggle" class="ml-4 p-2 rounded bg-gray-200 dark:bg-gray-700">
                Toggle Mode
            </button>
        </div>
    </nav>

    <!-- Script for Dark Mode Toggle -->
    <script>
        const toggle = document.getElementById('darkModeToggle');
        const htmlElement = document.documentElement;

        toggle.addEventListener('click', () => {
            if (htmlElement.classList.contains('dark')) {
                htmlElement.classList.remove('dark');
                localStorage.setItem('theme', 'light');
            } else {
                htmlElement.classList.add('dark');
                localStorage.setItem('theme', 'dark');
            }
        });

        // Load saved theme on page load
        if (localStorage.getItem('theme') === 'dark') {
            htmlElement.classList.add('dark');
        }
    </script>
</body>
</html>
